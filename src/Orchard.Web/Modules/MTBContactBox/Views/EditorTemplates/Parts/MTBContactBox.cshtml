@model MTBContactBox.Models.MTBContactBoxPart

<fieldset>
    <legend>MTB Contact Box</legend>

    <div class="editor-label">
        Title
    </div>

    <div class="editor-field">
        @Html.TextBoxFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        Main Body
    </div>

    <div class="editor-field">
        @Script.Require("OrchardTinyMce")
        @Html.TextAreaFor(model => model.MainBody, new { @class = "html tinymce" }) 
        @Html.ValidationMessageFor(model => model.MainBody)
    </div>

</fieldset>

